<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".player.MainFragments.PlayerViewFragment"
    tools:showIn="@id/main_content_view">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-1dp">

        <LinearLayout
            android:id="@+id/StatsLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical"
            android:weightSum="6">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="56dp">

                <TextView
                    android:id="@+id/stStrength"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/round_corner"
                    android:gravity="center"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/statStrengthTotal"
                    app:layout_constraintStart_toEndOf="@+id/statStrengthTotal"
                    app:layout_constraintTop_toTopOf="@+id/statStrengthTotal"
                    app:layout_constraintVertical_bias="0.6" />

                <TextView
                    android:id="@+id/statStrengthTotal"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView2" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="56dp"
                    android:layout_height="16dp"
                    android:gravity="center_horizontal"
                    android:text="Strength"
                    android:textSize="11dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="56dp">

                <TextView
                    android:id="@+id/stDexterity"
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:background="@drawable/round_corner"
                    android:gravity="center"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/statDexterityTotal"
                    app:layout_constraintStart_toEndOf="@+id/statDexterityTotal"

                    app:layout_constraintTop_toTopOf="@+id/statDexterityTotal"
                    app:layout_constraintVertical_bias="0.6" />


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="56dp"
                    android:layout_height="16dp"
                    android:gravity="center_horizontal"
                    android:text="Dexterity"
                    android:textSize="11dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/statDexterityTotal" />

                <TextView
                    android:id="@+id/statDexterityTotal"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="56dp">

                <TextView
                    android:id="@+id/stConstitution"
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:background="@drawable/round_corner"
                    android:gravity="center"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/statConstitutionTotal"

                    app:layout_constraintStart_toEndOf="@+id/statConstitutionTotal"
                    app:layout_constraintTop_toTopOf="@+id/statConstitutionTotal"
                    app:layout_constraintVertical_bias="0.6" />

                <TextView
                    android:id="@+id/statConstitutionTotal"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView4" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="56dp"
                    android:layout_height="16dp"
                    android:gravity="center_horizontal"
                    android:text="Constitution"
                    android:textSize="11dp"
                    app:autoSizeMaxTextSize="11sp"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/statConstitutionTotal" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="56dp">


                <TextView
                    android:id="@+id/stIntelligence"
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:background="@drawable/round_corner"
                    android:gravity="center"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/statIntelligenceTotal"

                    app:layout_constraintStart_toEndOf="@+id/statIntelligenceTotal"
                    app:layout_constraintTop_toTopOf="@+id/statIntelligenceTotal"
                    app:layout_constraintVertical_bias="0.6" />

                <TextView
                    android:id="@+id/statIntelligenceTotal"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView5" />


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="56dp"
                    android:layout_height="16dp"
                    android:gravity="center_horizontal"
                    android:text="Intelligence"
                    android:textSize="11dp"
                    app:autoSizeMaxTextSize="12sp"
                    app:autoSizeMinTextSize="6sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/statIntelligenceTotal" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="56dp">

                <TextView
                    android:id="@+id/stWisdom"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/round_corner"
                    android:gravity="center"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/statWisdomTotal"
                    app:layout_constraintStart_toEndOf="@+id/statWisdomTotal"
                    app:layout_constraintTop_toTopOf="@+id/statWisdomTotal"
                    app:layout_constraintVertical_bias="0.6" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="56dp"
                    android:layout_height="16dp"
                    android:gravity="center_horizontal"
                    android:text="Wisdom"
                    android:textSize="11dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/statWisdomTotal"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView6" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="56dp">


                <TextView
                    android:id="@+id/stCharisma"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/round_corner"
                    android:gravity="center"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/statCharismaTotal"
                    app:layout_constraintStart_toEndOf="@+id/statCharismaTotal"
                    app:layout_constraintTop_toTopOf="@+id/statCharismaTotal"
                    app:layout_constraintVertical_bias="0.6" />

                <TextView
                    android:id="@+id/statCharismaTotal"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView7" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="56dp"
                    android:layout_height="16dp"
                    android:gravity="center_horizontal"
                    android:text="Charisma"
                    android:textSize="11dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:weightSum="5">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/HPLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"

                android:layout_weight="1"
                android:minHeight="100dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/levelGroup"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/level_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/level"
                        android:textSize="7pt"
                        android:textStyle="bold"

                        app:layout_constraintEnd_toEndOf="@id/level_value"
                        app:layout_constraintStart_toStartOf="@id/level_value"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/level_value"
                        android:layout_width="56dp"
                        android:layout_height="wrap_content"

                        android:gravity="center_horizontal"
                        android:text="0"
                        android:textSize="10pt"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/level_text" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/money_copper_wrapper"
                    android:layout_width="42dp"
                    android:layout_height="42dp"

                    app:hintTextAppearance="@style/TextLabel"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <EditText
                        android:id="@+id/money_copper"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Copper"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:selectAllOnFocus="true"
                        android:textAlignment="center"
                        android:textSize="10sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/money_silver_wrapper"
                    android:layout_width="42dp"
                    android:layout_height="42dp"

                    app:hintTextAppearance="@style/TextLabel"
                    app:layout_constraintEnd_toStartOf="@id/money_copper_wrapper"
                    app:layout_constraintTop_toTopOf="parent">

                    <EditText
                        android:id="@+id/money_silver"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Silver"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:selectAllOnFocus="true"
                        android:textAlignment="center"
                        android:textSize="10sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/money_gold_wrapper"
                    android:layout_width="42dp"
                    android:layout_height="42dp"

                    app:hintTextAppearance="@style/TextLabel"
                    app:layout_constraintEnd_toStartOf="@id/money_silver_wrapper"
                    app:layout_constraintTop_toTopOf="parent">

                    <EditText
                        android:id="@+id/money_gold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Gold"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:selectAllOnFocus="true"
                        android:textAlignment="center"
                        android:textSize="10sp" />
                </com.google.android.material.textfield.TextInputLayout>


                <EditText
                    android:id="@+id/statCurrentHP"
                    android:layout_width="158dp"
                    android:layout_height="42dp"
                    android:ems="10"

                    android:gravity="center"
                    android:hint="Current"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:selectAllOnFocus="true"

                    android:singleLine="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.867"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.8" />

                <EditText
                    android:id="@+id/statTemporaryHP"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="8dp"
                    android:ellipsize="none"
                    android:ems="10"

                    android:gravity="center"
                    android:hint="Bonus"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"

                    android:textSize="6pt"
                    app:layout_constraintBottom_toTopOf="@+id/statCurrentHP"
                    app:layout_constraintEnd_toEndOf="@+id/statCurrentHP"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/statMaxHP" />

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"

                    android:src="@drawable/ic_shield_24dp"

                    app:layout_constraintBottom_toBottomOf="@id/statArmorClass"
                    app:layout_constraintEnd_toEndOf="@id/statArmorClass"
                    app:layout_constraintStart_toStartOf="@id/statArmorClass"
                    app:layout_constraintTop_toTopOf="@id/statArmorClass" />

                <TextView
                    android:id="@+id/statArmorClass"
                    android:layout_width="56dp"
                    android:layout_height="56dp"

                    android:gravity="center"
                    android:textSize="8pt"

                    app:layout_constraintBottom_toBottomOf="@+id/statCurrentHP"
                    app:layout_constraintEnd_toStartOf="@+id/statCurrentHP" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="19dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical"
                    android:text="HP"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@+id/statTemporaryHP"
                    app:layout_constraintEnd_toEndOf="@+id/statTemporaryHP"
                    app:layout_constraintHorizontal_bias="0.645"
                    app:layout_constraintStart_toEndOf="@+id/statTemporaryHP"
                    app:layout_constraintTop_toTopOf="@+id/statTemporaryHP"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="55dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="8dp"
                    android:text="Armor Class"
                    app:autoSizeMinTextSize="3dp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toTopOf="@+id/statArmorClass"
                    app:layout_constraintEnd_toStartOf="@+id/statMaxHP"
                    app:layout_constraintTop_toTopOf="@+id/textView13"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="23dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical"
                    android:text="@string/max_hp"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@+id/statMaxHP"
                    app:layout_constraintEnd_toEndOf="@+id/statMaxHP"
                    app:layout_constraintStart_toEndOf="@+id/statMaxHP"
                    app:layout_constraintTop_toTopOf="@+id/statMaxHP"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/statMaxHP"
                    android:layout_width="77dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center|center_vertical"
                    android:selectAllOnFocus="true"
                    android:textColor="@android:color/black"
                    app:layout_constraintBottom_toTopOf="@+id/statCurrentHP"
                    app:layout_constraintStart_toStartOf="@+id/statCurrentHP" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="23dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="HP"
                    app:layout_constraintBottom_toBottomOf="@+id/statCurrentHP"
                    app:layout_constraintEnd_toEndOf="@+id/statCurrentHP"
                    app:layout_constraintStart_toEndOf="@+id/statCurrentHP"
                    app:layout_constraintTop_toTopOf="@+id/statCurrentHP" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>