<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/player_info_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".player.MainFragments.SpellViewFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:minHeight="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/no_spells_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="You have no spells."
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/player_spell_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/itemSettingsOverlayMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlaySettingsLight"
        android:gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/overlaySettings"
            android:gravity="center"
            android:padding="4dp"
            android:text="Item Settings"
            android:textSize="8pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/deleteItemTextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_onclick_color"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:onClick="requestDeleteItem"
            android:padding="12dp"
            android:paddingBottom="16dp"
            android:textSize="10pt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_onclick_color"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:onClick="openItemFragment"
            android:padding="12dp"
            android:paddingBottom="16dp"
            android:text="Show Item Info"
            android:textSize="10pt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_onclick_color"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:onClick="closeMenu"
            android:padding="12dp"
            android:paddingBottom="16dp"
            android:text="Cancel"
            android:textSize="10pt" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
