<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Player.PlayerInfoActivity">

    <LinearLayout
        android:id="@+id/view_scroll_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="1dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimary"
            android:onClick="openPlayerSpellActivity"
            android:text="Spells" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:text="Overview" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:paddingTop="1dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            android:onClick="openPlayerItemActivity"
            android:text="Items" />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/content_wrapper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_scroll_bar">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteX="-1dp"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/StatsLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="switchViewUpdateStats"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical"
                android:weightSum="6">

                <!-- Strength set-->

                <!-- Constitution -->


                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:minHeight="56dp">

                    <TextView
                        android:id="@+id/stStrength"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/round_corner"
                        android:textSize="15sp"
                        android:gravity="center"
                        app:layout_constraintVertical_bias="0.6"
                        app:layout_constraintBottom_toBottomOf="@+id/statStrengthTotal"
                        app:layout_constraintStart_toEndOf="@+id/statStrengthTotal"
                        app:layout_constraintTop_toTopOf="@+id/statStrengthTotal" />

                    <TextView
                        android:id="@+id/statStrengthTotal"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView2" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="56dp"
                        android:layout_height="16dp"
                        android:gravity="center_horizontal"
                        android:text="Strength"
                        android:textSize="11dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:minHeight="56dp">

                    <TextView
                        android:id="@+id/stDexterity"
                        android:layout_width="30dp"
                        android:layout_height="30dp"

                        android:background="@drawable/round_corner"
                        android:textSize="15sp"
                        android:gravity="center"
                        app:layout_constraintVertical_bias="0.6"                        app:layout_constraintBottom_toBottomOf="@+id/statDexterityTotal"

                        app:layout_constraintStart_toEndOf="@+id/statDexterityTotal"
                        app:layout_constraintTop_toTopOf="@+id/statDexterityTotal" />


                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="56dp"
                        android:layout_height="16dp"
                        android:gravity="center_horizontal"
                        android:text="Dexterity"
                        android:textSize="11dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/statDexterityTotal" />

                    <TextView
                        android:id="@+id/statDexterityTotal"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>


                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:minHeight="56dp">

                    <TextView
                        android:id="@+id/stConstitution"
                        android:layout_width="30dp"
                        android:layout_height="30dp"

                        android:background="@drawable/round_corner"
                        android:textSize="15sp"
                        android:gravity="center"
                        app:layout_constraintVertical_bias="0.6"

                        app:layout_constraintBottom_toBottomOf="@+id/statConstitutionTotal"
                        app:layout_constraintStart_toEndOf="@+id/statConstitutionTotal"
                        app:layout_constraintTop_toTopOf="@+id/statConstitutionTotal" />

                    <TextView
                        android:id="@+id/statConstitutionTotal"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView4" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="56dp"
                        android:layout_height="16dp"
                        android:gravity="center_horizontal"
                        android:text="Constutition"
                        android:textSize="11dp"
                        app:autoSizeMaxTextSize="11sp"
                        app:autoSizeMinTextSize="8sp"
                        app:autoSizeTextType="uniform"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/statConstitutionTotal" />
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:minHeight="56dp">


                    <TextView
                        android:id="@+id/stIntelligence"
                        android:layout_width="30dp"
                        android:layout_height="30dp"

                        android:background="@drawable/round_corner"
                        android:textSize="15sp"
                        android:gravity="center"
                        app:layout_constraintVertical_bias="0.6"

                        app:layout_constraintBottom_toBottomOf="@+id/statIntelligenceTotal"
                        app:layout_constraintStart_toEndOf="@+id/statIntelligenceTotal"
                        app:layout_constraintTop_toTopOf="@+id/statIntelligenceTotal" />

                    <TextView
                        android:id="@+id/statIntelligenceTotal"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView5" />


                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="56dp"
                        android:layout_height="16dp"
                        android:gravity="center_horizontal"
                        android:text="Intelligence"
                        android:textSize="11dp"
                        app:autoSizeMaxTextSize="12sp"
                        app:autoSizeMinTextSize="6sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/statIntelligenceTotal" />
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:minHeight="56dp">

                    <TextView
                        android:id="@+id/stWisdom"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/round_corner"
                        android:textSize="15sp"
                        android:gravity="center"
                        app:layout_constraintVertical_bias="0.6"
                        app:layout_constraintBottom_toBottomOf="@+id/statWisdomTotal"
                        app:layout_constraintStart_toEndOf="@+id/statWisdomTotal"
                        app:layout_constraintTop_toTopOf="@+id/statWisdomTotal" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="56dp"
                        android:layout_height="16dp"
                        android:gravity="center_horizontal"
                        android:text="Wisdom"
                        android:textSize="11dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/statWisdomTotal"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView6" />

                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:minHeight="56dp">


                    <TextView
                        android:id="@+id/stCharisma"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/round_corner"
                        android:textSize="15sp"
                        android:gravity="center"
                        app:layout_constraintVertical_bias="0.6"
                        app:layout_constraintBottom_toBottomOf="@+id/statCharismaTotal"
                        app:layout_constraintStart_toEndOf="@+id/statCharismaTotal"
                        app:layout_constraintTop_toTopOf="@+id/statCharismaTotal" />

                    <TextView
                        android:id="@+id/statCharismaTotal"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView7" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="56dp"
                        android:layout_height="16dp"
                        android:gravity="center_horizontal"
                        android:text="Charisma"
                        android:textSize="11dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:weightSum="5"
                android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/HPLayout"
                    android:layout_width="match_parent"
                    android:minHeight="100dp"
                    android:layout_height="wrap_content"

                    android:layout_marginEnd="4dp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/statCurrentHP"
                        android:layout_width="158dp"
                        android:layout_height="42dp"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="number"
                        android:hint="Current"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.867"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.8" />

                    <EditText
                        android:id="@+id/statTemporaryHP"
                        android:layout_width="77dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginBottom="8dp"
                        android:ellipsize="none"
                        android:ems="10"
                        android:textSize="6pt"
                        android:gravity="center"
                        android:hint="Bonus"
                        android:inputType="number"
                        app:layout_constraintBottom_toTopOf="@+id/statCurrentHP"
                        app:layout_constraintEnd_toEndOf="@+id/statCurrentHP"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/statMaxHP" />

                    <EditText
                        android:id="@+id/statArmorClass"
                        android:layout_width="56dp"
                        android:layout_height="42dp"
                        android:layout_marginBottom="8dp"
                        android:ems="10"
                        android:inputType="number"
                        app:layout_constraintBottom_toBottomOf="@+id/statCurrentHP"
                        app:layout_constraintEnd_toStartOf="@+id/statCurrentHP" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="19dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="8dp"
                        android:gravity="center_vertical"
                        android:text="HP"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toBottomOf="@+id/statTemporaryHP"
                        app:layout_constraintEnd_toEndOf="@+id/statTemporaryHP"
                        app:layout_constraintHorizontal_bias="0.645"
                        app:layout_constraintStart_toEndOf="@+id/statTemporaryHP"
                        app:layout_constraintTop_toTopOf="@+id/statTemporaryHP"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="55dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="8dp"
                        android:text="Armor Class"
                        app:autoSizeMinTextSize="3dp"
                        app:autoSizeTextType="uniform"
                        app:layout_constraintBottom_toTopOf="@+id/statArmorClass"
                        app:layout_constraintEnd_toStartOf="@+id/statMaxHP"
                        app:layout_constraintTop_toTopOf="@+id/textView13"
                        app:layout_constraintVertical_bias="1.0" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="23dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="8dp"
                        android:gravity="center_vertical"
                        android:text="HP"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toBottomOf="@+id/statMaxHP"
                        app:layout_constraintEnd_toEndOf="@+id/statMaxHP"
                        app:layout_constraintStart_toEndOf="@+id/statMaxHP"
                        app:layout_constraintTop_toTopOf="@+id/statMaxHP"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/statMaxHP"
                        android:layout_width="77dp"
                        android:layout_height="25dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center|center_vertical"
                        android:textColor="@android:color/black"
                        app:layout_constraintBottom_toTopOf="@+id/statCurrentHP"
                        app:layout_constraintStart_toStartOf="@+id/statCurrentHP" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="23dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="HP"
                        app:layout_constraintBottom_toBottomOf="@+id/statCurrentHP"
                        app:layout_constraintEnd_toEndOf="@+id/statCurrentHP"
                        app:layout_constraintStart_toEndOf="@+id/statCurrentHP"
                        app:layout_constraintTop_toTopOf="@+id/statCurrentHP" />
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/constraintLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="4dp"
                    android:layout_weight="4">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/floatingActionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:onClick="switchViewAddItem"
                        app:layout_constraintBottom_toBottomOf="@+id/player_item_list"
                        app:layout_constraintEnd_toEndOf="@+id/player_item_list"
                        app:srcCompat="@android:drawable/ic_menu_add" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/player_item_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/no_items_text"
                        android:text="You have no items."
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:textColor="@android:color/darker_gray"/>
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>

        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="0dp"
            android:layout_margin="4dp"
            android:minHeight="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:layout_height="0dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/player_spell_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/no_spells_text"
                android:text="You have no spells."
                android:textStyle="bold"
                android:textSize="15sp"
                android:visibility="gone"
                android:layout_centerInParent="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="@android:color/darker_gray"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/addSpellActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="switchViewAddSpell"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@android:drawable/ic_menu_add" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/itemSettingsOverlayMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/overlaySettingsLight"
        android:gravity="bottom"
        android:visibility="gone"
        android:onClick="eatClickEvent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:gravity="center"
            android:background="@color/overlaySettings"
            android:textSize="8pt"
            android:textStyle="bold"
            android:text="Item Settings"/>

        <TextView
            android:id="@+id/deleteItemTextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:paddingBottom="16dp"
            android:gravity="center"
            android:textSize="10pt"
            android:clickable="true"
            android:background="@drawable/list_item_onclick_color"
            android:onClick="requestDeleteItem"
            android:focusable="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:paddingBottom="16dp"
            android:gravity="center"
            android:textSize="10pt"
            android:clickable="true"
            android:background="@drawable/list_item_onclick_color"
            android:onClick="showItemInfo"
            android:text="Show Item Info"
            android:focusable="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:paddingBottom="16dp"
            android:gravity="center"
            android:textSize="10pt"
            android:clickable="true"
            android:background="@drawable/list_item_onclick_color"
            android:onClick="showItemPHB"
            android:text="Show Item in PHB"
            android:focusable="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:paddingBottom="16dp"
            android:gravity="center"
            android:textSize="10pt"
            android:clickable="true"
            android:background="@drawable/list_item_onclick_color"
            android:onClick="closeMenu"
            android:text="Cancel"
            android:focusable="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/spellSettingsOverlayMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/overlaySettingsLight"
        android:gravity="bottom"
        android:visibility="gone"
        android:onClick="eatClickEvent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:gravity="center"
            android:background="@color/overlaySettings"
            android:textSize="8pt"
            android:textStyle="bold"
            android:text="Spell Settings"/>

        <TextView
            android:id="@+id/deleteSpellTextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:paddingBottom="16dp"
            android:gravity="center"
            android:textSize="10pt"
            android:clickable="true"
            android:background="@drawable/list_item_onclick_color"
            android:onClick="requestDeleteSpell"
            android:focusable="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:paddingBottom="16dp"
            android:gravity="center"
            android:textSize="10pt"
            android:clickable="true"
            android:background="@drawable/list_item_onclick_color"
            android:onClick="showSpellInfo"
            android:text="Show Spell Info"
            android:focusable="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:paddingBottom="16dp"
            android:gravity="center"
            android:textSize="10pt"
            android:clickable="true"
            android:background="@drawable/list_item_onclick_color"
            android:onClick="showSpellPHB"
            android:text="Show Spell in PHB"
            android:focusable="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:paddingBottom="16dp"
            android:gravity="center"
            android:textSize="10pt"
            android:clickable="true"
            android:background="@drawable/list_item_onclick_color"
            android:onClick="closeMenu"
            android:text="Cancel"
            android:focusable="true" />
    </LinearLayout>

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

</android.support.constraint.ConstraintLayout>
