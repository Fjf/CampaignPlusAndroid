<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dndapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Player.AddSpellActivity"
            android:label="@string/title_activity_add_spell"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Player.PlayerStatsActivity"
            android:label="@string/title_activity_player_stats"
            android:parentActivityName=".Player.PlayerInfoActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dndapp.Player.PlayerInfoActivity" />
        </activity>
        <activity
            android:name=".Player.AddItemActivity"
            android:label="@string/title_activity_add_item"
            android:parentActivityName=".Player.PlayerInfoActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dndapp.Player.PlayerInfoActivity" />
        </activity>
        <activity
            android:name=".Login.ServerSettingsActivity"
            android:label="@string/title_activity_server_settings"
            android:parentActivityName=".Login.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dndapp.Login.LoginActivity" />
        </activity>
        <activity android:name=".Player.PlayerInfoActivity" />
        <activity android:name=".Login.ForgotPasswordActivity" />
        <activity
            android:name=".PdfViewerActivity"
            android:alwaysRetainTaskState="true"
            android:launchMode="singleInstance" />
        <activity android:name=".Login.RegisterActivity" />
        <activity android:name=".Playthrough.PlaythroughActivity" />
        <activity android:name=".Main.SecondActivity" />
        <activity android:name=".Login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>